<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible"
              content="IE=edge">
              <meta name="viewport"
                    content="width=device-width, initial-scale=1.0">
        <title>Rides</title>

        {{! Bootstrap CSS }}
        <link rel="stylesheet"
              href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

        {{! Bootstrap JS }}
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        {{! Font Awesome }}
        <script src="https://kit.fontawesome.com/yourcode.js"
                crossorigin="anonymous"></script>

        <script>
            $(document).ready(
                function(){
                    //Show the rides from /api/v1/rides in the database
                    $(document).on('click', '#showRides', function(){
                        $.ajax(
                            {
                                url: '/api/v1/rides',
                                type: 'GET',
                                success: function(result){
                                    console.log(result);
                                    $('#showRides').html(result);
                                }
                            }
                        )
                    })
                }
            )
        </script>

    </head>
    <body>
        <h1>Rides</h1>

        <!-- Button to show the rides from the database -->
        <button id="showRides"
                class="btn btn-primary">Show Rides</button>

        <div id="rideContainer"></div>

        <!-- Bootstrap JS -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</html>