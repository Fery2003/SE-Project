<script>
        $(document).ready(function () {
            $("#requestsTable").on("click", "#btnAccept", function () {
                var requestId = $(this).closest("tr").find("td:first").text();
                const status = "accepted"
                // Make an AJAX request to delete the station
                $.ajax({
                    url: "/api/v1/requests/senior/${requestId}",
                    type: "PUT",
                    status
                    success: function (response) {
                        console.log(response);
                        updateTable(); // Update the table data

                        // Display success message to the user
                        var successMessage = $("<div>", {
                            class: "alert alert-success",
                            text: "Request accepted successfully!"
                        });

                        $("#requestsTable").before(successMessage);

                        // Automatically remove the success message after 3 seconds
                        setTimeout(function () {
                            successMessage.remove();
                        }, 3000);
                    },
                    error: function (error) {
                        console.error("Error updating table:", error.msg);
                    }
                });
            });
            $("#requestsTable").on("click", "#btnReject", function () {
                var requestId = $(this).closest("tr").find("td:first").text();
                const status = "rejected"
                // Make an AJAX request to delete the station
                $.ajax({
                    url: "/api/v1/requests/senior/${requestId}",
                    type: "PUT",
                    status
                    success: function (response) {
                        console.log(response);
                        updateTable(); // Update the table data

                        // Display success message to the user
                        var successMessage = $("<div>", {
                            class: "alert alert-success",
                            text: "Request accepted successfully!"
                        });

                        $("#requestsTable").before(successMessage);

                        // Automatically remove the success message after 3 seconds
                        setTimeout(function () {
                            successMessage.remove();
                        }, 3000);
                    },
                    error: function (error) {
                        console.error("Error updating table:", error.msg);
                    }
                });
            });
        });    
    </script>
    
